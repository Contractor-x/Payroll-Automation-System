# Payroll Automation System Environment Configuration
# Copy this file to .env and update the values

# ================================
# APPLICATION SETTINGS
# ================================
APP_NAME=Payroll Automation System
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=sqlite:///./database/payroll.db

# ================================
# PAYSTACK CONFIGURATION
# ================================
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# ================================
# SECURITY SETTINGS
# ================================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_SECRET_KEY=your-jwt-secret-key-change-this
PASSWORD_HASH_ROUNDS=12
TOTP_ISSUER_NAME=PayrollAutomation
TOTP_BACKUP_CODES_COUNT=10

# ================================
# PAYMENT SCHEDULER SETTINGS
# ================================
AUTO_PAYMENT_ENABLED=false
PAYMENT_SCHEDULE_HOUR=9
PAYMENT_TIMEZONE=Africa/Lagos

# ================================
# API SETTINGS
# ================================
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ================================
# LOGGING SETTINGS
# ================================
LOG_LEVEL=INFO
LOG_FILE=./logs/payroll.log
